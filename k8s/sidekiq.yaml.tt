apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= k8s_name %>-sidekiq
spec:
  selector:
    matchLabels:
      app: <%= k8s_name %>-sidekiq
  replicas: 2
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 50%
  template:
    metadata:
      labels:
        app: <%= k8s_name %>-sidekiq
    spec:
      imagePullSecrets:
        - name: digitalocean-access-token
      containers:
        - name: sidekiq
          image: $IMAGE_TAG
          imagePullPolicy: Always
          command: ["/bin/sh","-c"]
          args: ["bundle exec sidekiq -C config/sidekiq.yml"]
          env:
          - name: RAILS_ENV
            value: "production"
          - name: RAILS_LOG_TO_STDOUT
            value: "true"
          - name: REDIS_URL
            value: "redis://<%= k8s_name %>-redis-svc:6379"
          - name: DEPLOY_VERSION
            value: $IMAGE_TAG
          - name: RAILS_MASTER_KEY
            valueFrom:
              secretKeyRef:
                name: <%= k8s_name %>-secrets
                key: <%= k8s_name %>-master-key
          resources:
            requests:
              cpu: 1000m
              memory: 1000Mi
            limits:
              cpu: 1100m
              memory: 1100Mi
          ports:
            - containerPort: 7433
          livenessProbe:
            httpGet:
              path: /
              port: 7433
            initialDelaySeconds: 15
            timeoutSeconds: 5
          readinessProbe:
            httpGet:
              path: /
              port: 7433
            initialDelaySeconds: 15
            periodSeconds: 5
            successThreshold: 2
            failureThreshold: 2
            timeoutSeconds: 5
          lifecycle:
            preStop:
              exec:
                command: ["k8s/sidekiq_quiet"]
      terminationGracePeriodSeconds: 300
---
apiVersion: autoscaling/v2beta1
kind: HorizontalPodAutoscaler
metadata:
  name: <%= k8s_name %>-sidekiq
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: <%= k8s_name %>-sidekiq
  minReplicas: 2
  maxReplicas: 4
  metrics:
    - type: Resource
      resource:
        name: cpu
        targetAverageUtilization: 60