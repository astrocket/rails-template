apiVersion: batch/v1
kind: Job
metadata:
  name: <%= k8s_name %>-migration
spec:
  ttlSecondsAfterFinished: 15
  template:
    spec:
      imagePullSecrets:
        - name: digitalocean-access-token
      containers:
        - name: migration-app
          image: $IMAGE_TAG
          imagePullPolicy: Always
          command: [ "/bin/sh","-c" ]
          args: [ "bin/rails db:migrate" ]
          env:
          - name: RAILS_ENV
            value: "production"
          - name: RAILS_MASTER_KEY
            valueFrom:
              secretKeyRef:
                name: <%= k8s_name %>-secrets
                key: <%= k8s_name %>-master-key
      restartPolicy: Never